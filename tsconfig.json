{
    "root": true,
    "compilerOptions": {
        "target": "ES5",
        "moduleResolution": "node",
        "jsx": "react",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "myHooks": ["./packages/hooks/src/index.ts"],
            "my-hooks": ["./packages/hooks/src/index.ts"],
            "myHooks/lib/*": ["./packages/hooks/src/*"],
            "my-hooks/lib/*" : ["./packages/hooks/src/*"]
        },
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "importHelpers": true
    },
    "exclude": ["node_modules", "lib", "es", "dist", "example"]
}